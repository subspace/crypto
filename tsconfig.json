{
    "compilerOptions": {
        "module": "umd",
        "esModuleInterop": false,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    }
}
